<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:gravity="center"
    android:padding="30dp"
    android:background="@drawable/callout_border"

    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Area Title"
        android:id="@+id/calloutTitle" />

    <TextView

        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:text="Description"
        android:id="@+id/calloutDescription" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video ..."
        android:id="@+id/areaDetails" />
</LinearLayout>